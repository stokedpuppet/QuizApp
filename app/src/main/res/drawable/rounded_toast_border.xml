<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- The width and color of the border -->
    <stroke
        android:width="@dimen/thin"
        android:color="@color/gray" />

    <!-- The background color -->
    <solid
        android:color="@color/light_blue" />

    <!-- The desired corner radius. reduce it to keep it less rounded -->
    <corners android:radius="@dimen/round" />

    <padding
        android:left="@dimen/half_pad"
        android:top="@dimen/half_pad"
        android:right="@dimen/half_pad"
        android:bottom="@dimen/half_pad" />

</shape>